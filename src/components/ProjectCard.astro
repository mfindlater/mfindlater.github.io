---
import { Picture } from "astro:assets";
import type { Project, Tag } from "../lib/types";
import TagComponent from "./Tag.astro";

import Link from "./Link.astro";
let { name, description, tags, image, links } = Astro.props as Project;

links = links || [];
---

<div
  class="bg-white rounded-lg outline-2 shadow-md overflow-hidden hover:shadow-lg transition-all duration-300 transform hover:scale-[1.02]"
>
  <div class="h-48 bg-gray-200 relative">
    <!-- Project image or placeholder -->
    <Picture
      src={image}
      alt={name}
      class="w-full h-full object-cover outline-2"
      width={800}
      height={600}
    />
  </div>

  <div class="p-6">
    <h3 class="text-2xl font-bold mb-2">{name}</h3>
    <p class="text-gray-700 mb-4">{description}</p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag: Tag) => <TagComponent tag={tag} />)}
    </div>

    <!-- Links -->
    <div class="flex gap-4 mt-8">
      {links.map((link) => <Link name={link.name} href={link.href} />)}
    </div>
  </div>
</div>
